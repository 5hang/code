

jdk-8u181-linux-x64.tar.gz


mv jdk1.8.0_181/ /usr/local/jdk1.8

-----------------------------vim /etc/profile---------------------
export JAVA_HOME=/usr/local/jdk1.8/
export CLASSPATH=.:$JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar
export PATH=$JAVA_HOME/bin:$PATH 
-----------------------------------------------------------------

source /etc/profile
 
